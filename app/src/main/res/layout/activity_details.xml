<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details_Activity">

    <TextView
        android:id="@+id/nameDisplay"
        android:textSize="20sp"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Product:"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />
    <TextView
        android:id="@+id/priceDisplay"
        android:textSize="20sp"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Price:"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDisplay" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/dateDisplay"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Purchase Date:"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceDisplay" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/nameText"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline6"
        app:layout_constraintTop_toBottomOf="@id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/priceText"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline6"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/dateText"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline6"
        app:layout_constraintTop_toBottomOf="@id/priceText"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33830845" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38" />


</androidx.constraintlayout.widget.ConstraintLayout>